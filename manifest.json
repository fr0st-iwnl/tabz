{
    "manifest_version": 2,
    "name": "TabZ",
    "version": "1.0.0",
    "description": "lightweight and user-friendly extension for splitting tabs.",
    "permissions": ["tabs", "contextMenus"],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/x16.png",  
            "24": "icons/x24.png",  
            "32": "icons/x32.png",  
            "64": "icons/x64.png",  
            "128": "icons/x128.png"  
        }
    },
    "icons": {
        "16": "icons/x16.png",   
        "24": "icons/x24.png",   
        "32": "icons/x32.png",   
        "64": "icons/x64.png",   
        "128": "icons/x128.png"   
    },
    "commands": {
        "split-tabs": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "Command+Shift+F"
            },
            "description": "Split selected tabs into a new window"
        },
        "open-popup": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            },
            "description": "Open the popup.html"
        },
        "quick-split": {
            "suggested_key": {
                "default": "Ctrl+Shift+U",
                "mac": "Command+Shift+U"
            },
            "description": "Open the last accessed tabs in a new window"
        }
    }
}
